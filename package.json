{
  "name": "marscollective.co",
  "private": true,
  "workspaces": [
    "packages/*",
    "websites/*"
  ],
  "scripts": {
    "dev": "yarn workspace @marscollective/gatsby-theme-marscollective dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,yaml,yml}\""
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
